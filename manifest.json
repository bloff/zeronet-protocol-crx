{
  "manifest_version": 2,
  "name": "ZeroNet Protocol",
  "short_name": "ZeroNet",
  "description": "ZeroNet Protocol",
  "version": "0.3",
  "permissions": [ "tabs", "proxy", "webRequest", "webRequestBlocking", "*://*.bit/*", "*://zero/*",  "storage", "nativeMessaging" ],

  "icons": {
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },

  "browser_action": {
    "default_icon": "assets/icon_48.png",
    "default_title": "ZeroNet"
  },

  "options_page": "settings.html",

  "background": {
    "scripts": ["js/background.js"]
  }
}